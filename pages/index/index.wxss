/* pages/index/index.wxss */

page{
  height: 100%;
}
.swiper {
  height: 460rpx;
  width: 98%;
  margin:1%;
}

.slide-image{
 width:96%;
 height: 100%;
 margin:0% 2%;
}

.list{
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 15rpx;
}

.film{
  width: 48%;
  margin: 1%;
  float: left;
}

.film .poster{
  width: 100%;
}

.film .title{
  font-size: 30rpx;
  text-align: center;
  color: rgb(51, 51, 51);
  margin: 5px 0;
}

.film .title .rate{
  font-size: 30rpx;
  color: rgb(255, 172, 45);
}

.film .types{
  font-size: 25rpx;
  color: rgb(102, 102, 102);
  text-align: center;
  margin: 5px 0;
}

.loading {
  text-align: center;
  height: 80rpx;
  padding: 20rpx;
}

.loading image {
  width: 100%;
  height: 100%;
}